@model CVGS.Models.ViewModel.CheckoutCartViewModel
@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron text-center header">
    <h1 class="display-4 header-text">Checkout Cart</h1>

</div>
<div class="container text-center">


    <form enctype="multipart/form-data" method="post">
        <div class="row">
            <h4>Your Items</h4>
            <table class="table table-striped border moveInLeftEffect">
                <tr class="table-info">
                    <th>
                        Title
                    </th>
                    <th>
                        Rating
                    </th>
                    <th>
                        Price
                    </th>
                </tr>
                @foreach (var item in Model.MyCartItems)
                {
                    <tr>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @item.Rating
                        </td>
                        <td>
                            @item.Price
                        </td>

                    </tr>
                }
            </table>
        </div>

        @foreach (var item in Model.FriendsCartItems)
        {
            <div class="row">
                <h4>Items for @item.Key </h4>
                <table class="table table-striped border moveInLeftEffect">
                    <tr class="table-info">
                        <th>
                            Title
                        </th>
                        <th>
                            Rating
                        </th>
                        <th>
                            Price
                        </th>
                    </tr>
                    @foreach (var cartItem in item.Value)
                    {
                        <tr>
                            <td>
                                @cartItem.Title

                            </td>
                            <td>
                                @cartItem.Rating

                            </td>
                            <td>
                                @cartItem.Price

                            </td>

                        </tr>
                    }
                </table>
            </div>
         }
            <div>
                <div class="form-group row">
                    <div class="col-3"></div>
                    <div class="col-2">
                        <label>Select a Shipping Address</label>
                    </div>
                    <div class="col-4">
                        <select name="addressId" class="form-control">
                     
                            @foreach (var item in Model.ShippingAddresses)
                            {
                                <option value="@item.Id">@item.StreetName Unit @item.HouseNumber</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3"></div>
                    <div class="col-2">
                        <label>Select a Credit Card</label>
                    </div>
                    <div class="col-4">
                        <select name="cardId" class="form-control">

                            @foreach (var item in Model.CreditCards)
                            {
                                <option value="@item.Id">@item.Last4Digits</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        <button class="btn btn-outline-primary" type="submit">Submit</button>
    </form>
</div>